<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "domain.Transaction" table = "transakcija">
      
      <meta attribute = "class-description">
         This class contains details about Transaction class. 
      </meta>
      
      <id name = "transactionID" type = "int" column = "transakcijaID">
         <generator class="native"/>
      </id>
      
      <property name = "amount" column = "iznos" type = "java.math.BigDecimal"/>

      <property name = "dateTime" column = "vreme" type = "java.time.ZonedDateTime"/>
      
      <many-to-one name = "paying" class="domain.Account" not-null="true" column = "racunPlatioca"></many-to-one>

      <many-to-one name = "receiving" class="domain.Account" not-null="true" column = "racunPrimaoca"></many-to-one>
      
   </class>
</hibernate-mapping>