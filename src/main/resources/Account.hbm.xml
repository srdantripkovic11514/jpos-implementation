<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "domain.Account" table = "tekuciracun">
      
      <meta attribute = "class-description">
         This class contains details about Account class. 
      </meta>
      
      <id name = "number" type = "string" column = "brojTekucegRacuna">
         <generator class="native"/>
      </id>
      
      <property name = "balance" column = "stanje" type = "java.math.BigDecimal"/>
	  
      <property name = "type" column = "vrstaKlijenta" type = "string"/>
      
   </class>
</hibernate-mapping>